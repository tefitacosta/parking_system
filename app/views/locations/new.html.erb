<!-- New Location-->
<h2>Register new location</h2>

<%= form_for @location, url: {action: 'create'} do |f| %>


  <div class="field">
    <%= f.label :name %> <br/>
    <%= f.text_field :name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :address %><br/>
    <%= f.text_field :address, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :description %><br/>
    <%= f.text_field :description, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :max_slots %><br/>
    <%= f.number_field :max_slots, autofocus: true %>
  </div>

  <div class="actions">
    <%= f.submit "Register" %>
  </div>

<% end %>
